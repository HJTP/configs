!
! xterm
!
xterm*background: #000000
xterm*foreground: #ffffff

!
! urxvt (rxvt-unicode)
!
URxvt*background: #000000
URxvt*foreground: #ffffff
URxvt.scrollBar: false
URxvt*termName: screen-256color
URxvt.perl-ext: default,url-select,clipboard
! Open urls
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: chromium
URxvt.url-select.underline: true
! Clipboard integration with X
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
! That utf8 input box thing when pressing ctrl+shift
URxvt.iso14755: false
! Normally all bold colors are automatically high-intensity. Disable that, but
! fix the colorvalue of black to always be identical to its high-intensity
! counterpart, otherwise programs like htop break.
URxvt.intensityStyles: false
URxvt.color0: Grey25
